{
  "manifest_version": 3,
  "name": "Child Safe LLM Filter",
  "version": "1.0",
  "description": "Filters ChatGPT responses for child-safe content",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Child Safe LLM Filter"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://gemini.google.com/*", "https://grok.com/*"],
      "js": ["libs/brain.min.js", "libs/chart.min.js", "content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["model/brain_lstm_model.json", "libs/brain.min.js", "libs/chart.min.js", "imgs/flowers.png"],
      "matches": ["https://chatgpt.com/*", "https://gemini.google.com/*", "https://grok.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
